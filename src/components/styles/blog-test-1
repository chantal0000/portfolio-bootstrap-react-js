import React, {useEffect, useState} from "react";
import firebase from "../firebaseFirestore"

function Blog() {
    const [blogs, setBlogs] = useState([]);
    const fetchBlogs = async () => {
        const response = db.collection('Blogs');
        // 'Blogs' from firebase
        const data = await response.get();

        data.docs.forEach(docItem => {
            setBlogs([...blogs, docItem.data()])
        })
    }
    // call data before UI is there
    // useEffect(() => {
    fetchBlogs();
    // },[])
    return (
        <div className="App">
            {
                blogs && blogs.map(blogsData => {
                    return (
                        <div className="blog-container">
                            <h2>{blogsData.title}</h2>
                            <p>{blogsData.body}</p>
                        </div>
                    )
                })
            }
        </div>

    )
}

export default Blog;